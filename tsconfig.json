{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "module": "ESNext",
    "rootDir": "./lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false
  },

  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
